
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1510440588672-1b27b22043a1">
  <div class="container d-flex align-items-end flex-column">
    <h1>.ccktls</h1>
    <p><%= link_to 'Add a new cocktail', 'cocktails/new', class: "btn btn-secondary btn-lg btn-block" %></p>
  </div>
</div>
<div class="d-flex justify-content-center">
  <div class="cards-container d-flex flex-wrap align">
    <% @cocktails.each do | cocktail | %>

    <%= link_to cocktail_path(cocktail) do %>
    <div class="card-category m-1" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('<% if cocktail.photo.attached? %><%= cl_image_path cocktail.photo.key %><% else %><%= cocktail.image_url %><% end %>')">
    <h3><%= cocktail.name %></h3>
    </div>
    <% end %>

    <% end %>
   </div>
</div>
