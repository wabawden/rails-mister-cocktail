<div class="banner banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1510440588672-1b27b22043a1">
  <div class="container d-flex align-items-end flex-column">
    <h1>.ccktls</h1>
  </div>
</div>

<div class="d-flex flex-wrap">
  <div class="card-category card-category-show m-1 p-3" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('<% if @cocktail.photo.attached? %><%= cl_image_path @cocktail.photo.key %><% else %><%= @cocktail.image_url %><% end %>')">
      <h3><%= @cocktail.name %></h3>
      <p></p>
          <% @cocktail.doses.each do |dose| %>
    <p>~ <%= dose.description %>  <%= dose.ingredient.name %>  <%= link_to dose_path(dose),
                method: :delete,
                dose_id: dose.id,
                data: { confirm: "Are you sure you want to delete this ingredient?" } do %>
        <i class="far fa-trash-alt"></i>
    <% end %></p>
    <% end %>
  </div>

  <div class="p-3">
    <h4>Add a new ingredient:</h4>
    <%= simple_form_for @dose do |f| %>
      <%= f.input :description %>
      <%= f.hidden_field :cocktail_id, :value => @cocktail.id %>
      <%= f.association :ingredient, class: "js-example-basic-single" %>
      <%= f.button :submit, 'Add ingredient' , class: "btn btn-secondary" %>
    <% end %>
  </div>
</div>
<p></p>
<p class="m-1"><%= link_to 'Back', '/', class: "btn btn-secondary" %></p>


